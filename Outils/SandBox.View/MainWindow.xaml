<Window x:Class="SandBox.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="test validation" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary>
            <Style TargetType="Label" x:Key="ErrorLabel">
                <Setter Property="Foreground" Value="Red"/>
            </Style>
            <Style TargetType="Label" x:Key="TitleLabel">
                <Setter Property="FontWeight" Value="Bold"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <StackPanel Margin="50">
        <Label Content="Nom du personnage"
               Style="{StaticResource TitleLabel}"/>
        <TextBox Text="{Binding Nom.Value}"/>
        <Label Content="{Binding Nom.FirstError}"
               Style="{StaticResource ErrorLabel}"/>
        <Label Content="Description"
               Style="{StaticResource TitleLabel}"/>
        <TextBox Text="{Binding Description.Value}"/>
        <Label Content="{Binding Description.FirstError}"
               Style="{StaticResource ErrorLabel}"/>
    </StackPanel>
</Window>
